<div class="row top-row">
  <div class="three columns">
    <div id="left-nav-categories">
      <ul>
        {{#each model as |category|}}
          <li>
            <a href="#{{category.name}}">
              {{category.name}}
              {{#if repos}}
                <span class="counter">({{category.repos.length}})</span>
              {{/if}}
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="six columns">
    <h2 class="flush-top">Latest Projects</h2>
  </div>

  {{partial "partials/home-hero-repo"}}

  <section id="megamindVertical2DealWidget_PseudoFreshWidget"
           class="three columns mm-widget mini-cards">
    {{#each (array-slice reposSortedByCreatedAt 1 3) as |repo|}}
      {{partial "partials/home-hero-small"}}
    {{/each}}
  </section>
</div>

{{#if repos}}
  {{#each model as |category|}}
    <section class="four-pack deal-pack row pad-row" id="{{category.name}}">
      <div class="section-head">
        <h2>{{category.name}}</h2>
      </div>
      <div class="block-grid four-up">
        {{#each category.repos as |repo|}}
          {{partial "partials/home-category-repo"}}
        {{/each}}
      </div>
    </section>
  {{/each}}
{{/if}}

<div id="view-all-deals" class="text-center">
  <a class="button btn-secondary" href="https://github.com/groupon/">
    View All Projects
  </a>
</div>
